[flake8]
max-line-length = 160

#Excluded Folders
exclude=node_modules/*, */migrations/*, ./.venv/*

select=E1, E2, E3, E4, E5, E7, E9, F4, F6, F7, F8, W1, W2, W3, W5, W6, CNL100, C400, C401, C402, C403, C404, C405, C406, C407, C408, C409, C410, C411, A500, A501, A502, C818,

# The check E133 is mutually exclusive with check E123, but matches our codestyle more closely, hence the ignore.
# Both W504 and W503 seem to be activated in W5, even though they are mutually exclusive. Our code adheres to W503.
ignore=E123,W504

# Error Codes => https://pycodestyle.readthedocs.io/en/latest/intro.html#error-codes
# [DONE] E1 - Indentation
# [DONE] E2 - Whitespace
# [DONE] E3 - Blank line
# [DONE] E4 - Import
# [DONE] E5 - Line length
# [DONE] E7 - Statement
# [DONE] E9 - Runtime

# Error / Violation Codes => https://github.com/PyCQA/flake8/blob/master/docs/source/user/error-codes.rst
# [DONE] F4 - Module Import, Shadowed Module, __future__
# [DONE] F6 - Dictionary Key Repeated, Star-unpacking, two or more starred expressions in an assignment
# [DONE] F7 - Outside of Loop, Outside of function, Outside of generator
# [DONE] F8 - Redefined, Undefined, Never used, Duplicated

# Warning Codes => https://pycodestyle.readthedocs.io/en/latest/intro.html#error-codes
# [DONE]    W1 - Indentation warning
# [DONE]    W2 - Whitespace warning
# [DONE]    W3 - Blank line warning
# [DONE]    W5 - Line break warning
# [DONE]    W6 - Deprecation warning


# Flake8 plugins Codes
# [DONE]    CNL100 - Class definition does not have a new line.
# [DONE]    C4XX   - Better list/set/dict comprehensions.
# [DONE]    A5XX   - Better Assertions
# [DONE]    C8XX   - Fix Trailing commas
